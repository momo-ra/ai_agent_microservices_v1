FROM python:3.10-slim

# 1. Install OS packages needed to compile psycopg2:
#    - libpq-dev: provides pg_config + headers
#    - gcc & make: to build the C extension
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      build-essential \
      libpq-dev \
      git \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 2. Now pip can build psycopg2 successfully
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8004
CMD [ "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8004" ]